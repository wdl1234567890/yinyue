.square-card-container{
  display: flex;
  flex-direction: column;
}
.square-container {
  background-color: #eee;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  position: relative;
}
.out-shadow-container{
  background-color: #eee;
  border-radius: 40rpx;
}
.info-content{
  margin-top: 10rpx;
  font-size: 22rpx;
  color: #777;
  letter-spacing: 2px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.image-content {
  width: 100%;
  height: 100%;
  position: absolute;
  left: 0;
  top: 0;
  border: 1px solid #999;
}
