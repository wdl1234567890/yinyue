.vip-right-item-container{
  background-color: #eee;
  border-radius: var(--theme-radius);
  padding: var(--theme-gap);
}
.title{
  font-size: 35rpx;
  font-weight: bold;
  letter-spacing: 1px;
  color: #333;
  line-height: 84rpx;
}
.state{
  color: #999;
  letter-spacing: 1px;
  font-size: 25rpx;
  line-height: 25rpx;
}
.thumb-item{
  box-shadow: 0 2px 10px #999;
}
.thumb{
  position: relative;
}

.left-part{
  display: flex;
  flex-direction: column;
}
.right-part{
  display: flex;
}
